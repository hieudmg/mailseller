from pydantic_settings import BaseSettings
from pydantic import AnyHttpUrl
from dotenv import load_dotenv


class DataType(TypedDict):
    code: str
    name: str
    lifetime: Literal["short", "long"]
    storage: Literal["redis", "db"]
    price: float


class Rank(TypedDict):
    weekly_credit: float
    discount: float
    name: str
    code: str


